<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thank_dailog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/patientinfo"
    app:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="314dp"
        app:srcCompat="@drawable/donate2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="275dp"
        android:layout_height="87dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        android:contentDescription="@string/thankyou"
        android:foregroundGravity="bottom"
        android:src="@drawable/note" />

    <ImageButton
        android:id="@+id/close_image_Button2"
        android:layout_width="72dp"
        android:layout_height="67dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/x"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_baseline_close_24"
        tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

</androidx.cardview.widget.CardView>